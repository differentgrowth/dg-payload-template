{
  "name": "dg-payload-template",
  "version": "0.1.0",
  "description": "A modern Next.js 16 + PayloadCMS 3 starter template with TailwindCSS 4, shadcn/ui, and Vercel deployment",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "next build --webpack",
    "dev": "next dev",
    "next:analyze": "next experimental-analyze",
    "devsafe": "rm -rf .next && next dev",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "payload generate:types",
    "lint": "biome lint",
    "format": "ultracite fix",
    "check": "biome check --write --unsafe",
    "start": "next start",
    "prepare": "husky",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@payloadcms/db-vercel-postgres": "^3.70.0",
    "@payloadcms/live-preview-react": "^3.70.0",
    "@payloadcms/next": "^3.70.0",
    "@payloadcms/plugin-redirects": "^3.70.0",
    "@payloadcms/plugin-seo": "^3.70.0",
    "@payloadcms/richtext-lexical": "^3.70.0",
    "@payloadcms/storage-vercel-blob": "^3.70.0",
    "@payloadcms/translations": "^3.70.0",
    "@payloadcms/ui": "^3.70.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.12.0",
    "motion": "^12.25.0",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "payload": "^3.70.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "shadcn": "^3.6.3",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@hookform/resolvers": "^5.2.2",
    "@payloadcms/email-resend": "^3.70.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "react-hook-form": "^7.71.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "ultracite": "^7.0.11",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.16"
  }
}
